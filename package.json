{
  "name": "directory2file",
  "displayName": "Export Directory to File",
  "description": "Export all files in a directory to a single Markdown file with ignore and include support",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "directory2file.exportToFile",
        "title": "Dir2file: Export Directory to File"
      },
      {
        "command": "directory2file.createIgnore",
        "title": "Dir2file: Create/Edit ignore File"
      },
      {
        "command": "directory2file.createInclude",
        "title": "Dir2file: Create/Edit include File"
      },
      {
        "command": "directory2file.exportActiveTabs",
        "title": "Dir2file: Export only active tabs"
      },
      {
        "command": "directory2file.openSettings",
        "title": "Dir2file: Open Extension Settings"
      }
    ],
    "configuration": {
      "title": "Export Directory to File",
      "properties": {
        "directory2file.globalIgnoreRules": {
          "type": "array",
          "default": [
            "node_modules",
            "dist",
            "out",
            "build",
            "tmp",
            "temp",
            "builds",
            "builds/*",
            "builds/*/*",
            "builds/*/*/*",
            ".git"
          ],
          "description": "Global ignore rules for all exports"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cogscides/vscode-export-dir2file"
  },
  "bugs": {
    "url": "https://github.com/cogscides/vscode-export-dir2file/issues"
  },
  "homepage": "https://github.com/cogscides/vscode-export-dir2file#readme",
  "keywords": [
    "VSCode",
    "extension",
    "export",
    "directory",
    "file",
    "markdown",
    "ignore",
    "include"
  ],
  "author": {
    "name": "cogscides",
    "email": "cogscides@gmail.com"
  },
  "publisher": "cogscides",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/strip-comments": "^2.0.4",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/vsce": "^2.29.0",
    "ignore": "^5.3.1",
    "minimatch": "^9.0.5",
    "strip-comments": "^2.0.1"
  }
}
