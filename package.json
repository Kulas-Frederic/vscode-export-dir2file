{
  "name": "vscode-export-dir2file",
  "displayName": "Export Directory to File",
  "description": "Export all files in a directory to a single Markdown file with ignore and whitelist support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-export-dir2file.exportToFile",
        "title": "Dir2file: Export Directory to File"
      },
      {
        "command": "vscode-export-dir2file.createIgnore",
        "title": "Dir2file: Create/Edit ignore File"
      },
      {
        "command": "vscode-export-dir2file.createWhitelist",
        "title": "Dir2file: Create/Edit whitelist File"
      },
      {
        "command": "vscode-export-dir2file.exportActiveTabs",
        "title": "Dir2file: Export only active tabs"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/vsce": "^2.29.0",
    "ignore": "^5.3.1",
    "minimatch": "^9.0.5"
  }
}
